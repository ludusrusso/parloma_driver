<!-- This xml lists the equivalence commands-codes that are accepted by the robotic hand. -->
<!-- This xml refers to the schema for 3D-printed PARLOMA right hand developed by Andrea Bulgarelli. -->
<commands>
	<list type="array">
		<!-- This array specifies the commands we are taking in consideration for each robotic limb. -->
		<value>set_all_motors</value>
		<value>set_one_motor</value>
		<value>read_all_motors</value>
		<value>read_one_motor</value>
		<value>reset_all_motors</value>
		<value>reset_one_motor</value>
		<value>test_all_motors</value>
		<value>test_one_motor</value>
		<value>save_all_motors</value>
		<value>save_one_motor</value>
	</list>

	<codes type="array">
		<!-- This array specifies the corresponding codes for 3D-printed PARLOMA right hand developed by Andrea Bulgarelli.
			 Code equal to -1 means that the corresponding command is not supported by the firmware controlling the hand.
		-->
		<set_all_motors>241</set_all_motors>
		<set_one_motor>242</set_one_motor>
		<read_all_motors>243</read_all_motors>
		<read_one_motor>244</read_one_motor>
		<reset_all_motors>245</reset_all_motors>
		<reset_one_motor>-1</reset_one_motor>
		<test_all_motors>246</test_all_motors>
		<test_one_motor>-1</test_one_motor>
		<save_all_motors>247</save_all_motors>
		<save_one_motor>-1</save_one_motor>
	</codes>
</commands>
